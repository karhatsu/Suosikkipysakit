<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <TextView android:id="@+id/stops_visibility_info_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/activity_stops_visibility_info_text"
            android:layout_margin="10dp"
            android:textSize="16dp"/>
    
    <ListView
        android:id="@+id/stops_visibility_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="false"
        android:layout_below="@id/stops_visibility_info_text"
        tools:context=".StopsVisibilityActivity" />

</RelativeLayout>