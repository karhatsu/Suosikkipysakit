<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="wrap_content" 
    android:layout_width="match_parent"
    android:padding="10dp"
    android:textSize="20sp"> 
    
	<TextView xmlns:android="http://schemas.android.com/apk/res/android"
	    android:id="@+id/departure_list_item_time"
		android:layout_width="50dp"
	    android:layout_height="wrap_content"
		android:layout_margin="@dimen/text_margin_departure"
		android:gravity="start"
		android:textAppearance="?attr/textAppearanceListItem"/>
	
	<TextView xmlns:android="http://schemas.android.com/apk/res/android"
	    android:id="@+id/departure_list_item_min"
	    android:layout_width="40dp"
	    android:layout_height="wrap_content"
		android:layout_margin="@dimen/text_margin_departure"
		android:gravity="center"
		android:textAppearance="?attr/textAppearanceListItem"/>
	
	<TextView xmlns:android="http://schemas.android.com/apk/res/android"
	    android:id="@+id/departure_list_item_line"
	    android:layout_width="40dp"
	    android:layout_height="wrap_content"
		android:layout_margin="@dimen/text_margin_departure"
		android:gravity="end"
		android:textAppearance="?attr/textAppearanceListItem"/>

	<TextView xmlns:android="http://schemas.android.com/apk/res/android"
	    android:id="@+id/departure_list_item_end_stop"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
		android:layout_margin="@dimen/text_margin_departure"
		android:maxLines="1"
		android:ellipsize="end"
		android:textAppearance="?attr/textAppearanceListItem"/>
		
</LinearLayout>